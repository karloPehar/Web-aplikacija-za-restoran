
@using ClassLibrary1.ViewModels;

@{
    Layout = "_Layout";
    var proizvodDorucak = (List<ProizvodJelovnikVM>)ViewData["proizvodiDorucak"];
    var proizvodRucak = (List<ProizvodJelovnikVM>)ViewData["proizvodiRucak"];
    var proizvodVecera= (List<ProizvodJelovnikVM>)ViewData["proizvodiVecera"];
}




<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body data-spy="scroll" data-target="#ftco-navbar" data-offset="200">



    <section class="ftco-section" id="section-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center mb-5 ftco-animate">
                    <h2 class="display-4">Današnji meni</h2>
                   
                </div>

                <div class="col-md-12 text-center">

                    <ul class="nav ftco-tab-nav nav-pills mb-5" id="pills-tab" role="tablist">
                        <li class="nav-item ftco-animate">
                            <a class="nav-link active" id="pills-breakfast-tab" data-toggle="pill" href="#pills-breakfast" role="tab" aria-controls="pills-breakfast" aria-selected="true">Breakfast</a>
                        </li>
                        <li class="nav-item ftco-animate">
                            <a class="nav-link" id="pills-lunch-tab" data-toggle="pill" href="#pills-lunch" role="tab" aria-controls="pills-lunch" aria-selected="false">Lunch</a>
                        </li>
                        <li class="nav-item ftco-animate">
                            <a class="nav-link" id="pills-dinner-tab" data-toggle="pill" href="#pills-dinner" role="tab" aria-controls="pills-dinner" aria-selected="false">Dinner</a>
                        </li>
                    </ul>

                    <div class="tab-content text-left">
                        <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel" aria-labelledby="pills-breakfast-tab">
                            <div class="row">


                                @foreach (var pr in proizvodDorucak)
                                {
                                    <div class="col-md-6 ftco-animate">
                                        <div class="media menu-item">
                                            <img class="mr-3" src="/images/@pr.nazivSlike" class="img-fluid" alt="Free Template by Free-Template.co">
                                            <div class="media-body">
                                                <h5 class="mt-0">@pr.nazivProizvoda</h5>
                                                <p>@pr.opisProizvoda</p>
                                                <h6 class="text-primary menu-price">@pr.cijenaProizvoda KM</h6>
                                            </div>
                                        </div>



                                    </div>
                                }



                               
                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-lunch" role="tabpanel" aria-labelledby="pills-lunch-tab">
                            <div class="row">

                                @foreach (var proizvod in proizvodRucak)
                                {
                                    <div class="col-md-6 ftco-animate">

                                        <div class="media menu-item">
                                            <img class="mr-3" src="/images/@proizvod.nazivSlike" class="img-fluid" alt="Free Template by Free-Template.co">
                                            <div class="media-body">
                                                <h5 class="mt-0">@proizvod.nazivProizvoda</h5>
                                                <p>@proizvod.opisProizvoda</p>
                                                <h6 class="text-primary menu-price">@proizvod.cijenaProizvoda KM</h6>
                                            </div>
                                        </div>



                                    </div>
                                }



                            </div>
                        </div>
                        <div class="tab-pane fade" id="pills-dinner" role="tabpanel" aria-labelledby="pills-dinner-tab">
                            <div class="row">
                                @foreach (var proizvod in proizvodVecera)
                                {
                                    <div class="col-md-6 ftco-animate">

                                        <div class="media menu-item">
                                            <img class="mr-3" src="/images/@proizvod.nazivSlike" class="img-fluid" alt="Free Template by Free-Template.co">
                                            <div class="media-body">
                                                <h5 class="mt-0">@proizvod.nazivProizvoda</h5>
                                                <p>@proizvod.opisProizvoda</p>
                                                <h6 class="text-primary menu-price">@proizvod.cijenaProizvoda KM</h6>
                                            </div>
                                        </div>



                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>




</body>
</html>